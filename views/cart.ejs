<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart - HB Mart</title>
    <link href="https://cdn.bootcdn.net/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .cart-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 40px 20px;
        }
        .cart-item {
            background-color: var(--white);
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }
        .cart-item-image {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 8px;
        }
        .cart-item-details {
            flex: 1;
        }
        .cart-item-name {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 5px;
        }
        .cart-item-price {
            color: var(--primary);
            font-size: 16px;
            font-weight: 500;
        }
        .cart-item-quantity {
            font-size: 14px;
            color: var(--dark-gray);
            margin-top: 8px;
        }
        .cart-item-total {
            font-size: 20px;
            font-weight: bold;
            color: var(--text-dark);
            min-width: 100px;
            text-align: right;
        }
        .cart-summary {
            background-color: var(--light-gray);
            border-radius: 8px;
            padding: 25px;
            margin-top: 30px;
        }
        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            font-size: 16px;
        }
        .summary-total {
            font-size: 24px;
            font-weight: bold;
            color: var(--primary);
            border-top: 2px solid var(--medium-gray);
            padding-top: 15px;
            margin-top: 15px;
        }
        .empty-cart {
            text-align: center;
            padding: 80px 20px;
        }
        .empty-cart i {
            font-size: 80px;
            color: var(--dark-gray);
            margin-bottom: 20px;
        }

        /* Voucher styles */
        .voucher-section {
            background: var(--white);
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }
        .voucher-input-group {
            display: flex;
            gap: 10px;
        }
        .voucher-input-group input {
            flex: 1;
            padding: 12px;
            border: 1px solid var(--medium-gray);
            border-radius: 6px;
            font-size: 14px;
            text-transform: uppercase;
        }
        .voucher-applied {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #d4edda;
            padding: 12px 15px;
            border-radius: 6px;
            margin-top: 10px;
        }
        .voucher-applied .voucher-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .voucher-applied .voucher-code {
            font-family: monospace;
            font-weight: bold;
            background: white;
            padding: 4px 10px;
            border-radius: 4px;
        }
        .voucher-error {
            color: #dc3545;
            font-size: 13px;
            margin-top: 8px;
        }
        .discount-row {
            color: #28a745;
        }

        /* ✅ 新增：数量控件样式 */
        .quantity-form {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            margin-top: 4px;
        }
        .qty-btn {
            border: 1px solid var(--primary);
            background-color: #fff;
            width: 28px;
            height: 28px;
            border-radius: 4px;
            font-size: 16px;
            line-height: 1;
            cursor: pointer;
        }
        .qty-input {
            width: 50px;
            text-align: center;
            padding: 4px;
            border-radius: 4px;
            border: 1px solid var(--medium-gray);
        }
    </style>
</head>
<body>
    <%- include('partials/navbar', { user: user, currentPage: 'cart' }) %>
    
    <!-- Main Content -->
    <div class="cart-container">
        <h1 style="margin-bottom: 30px;">
            <i class="fas fa-shopping-cart"></i> Your Shopping Cart
        </h1>
        
        <% if (messages && messages.success && messages.success.length > 0) { %>
            <div class="alert alert-success">
                <%= messages.success[0] %>
            </div>
        <% } %>
        
        <% if (messages && messages.error && messages.error.length > 0) { %>
            <div class="alert alert-error">
                <%= messages.error[0] %>
            </div>
        <% } %>
        
        <% if (cart && cart.length > 0) { %>
            <!-- Clear Cart Button -->
            <div style="margin-bottom: 20px; text-align: right;">
                <a href="/cart/clear" 
                   class="btn btn-danger"
                   onclick="return confirm('Are you sure you want to clear all items from your cart?');"
                   style="background-color: #dc3545; border-color: #dc3545;">
                    <i class="fas fa-trash-alt"></i> Clear Cart
                </a>
            </div>
            
            <!-- Cart Items -->
            <% let total = 0; %>
            <% cart.forEach(item => { %>
                <% total += item.price * item.quantity; %>
                <div class="cart-item">
                    <img src="/images/<%= item.image %>" alt="<%= item.productName %>" 
                         class="cart-item-image" 
                         onerror="this.src='https://via.placeholder.com/100x100?text=No+Image'">
                    
                    <div class="cart-item-details">
                        <div class="cart-item-name"><%= item.productName %></div>
                        <div class="cart-item-price">$<%= item.price.toFixed(2) %> each</div>
                        <div class="cart-item-quantity">
                            <i class="fas fa-box"></i>
                            <!-- ✅ 新的数量表单：- [input] + Update -->
                            <form action="/cart/update/<%= item.productId %>" method="POST" class="quantity-form">
                                <button type="submit" name="action" value="decrease" class="qty-btn">-</button>
                                <input type="number" name="quantity" min="1" value="<%= item.quantity %>" class="qty-input">
                                <button type="submit" name="action" value="increase" class="qty-btn">+</button>
                                <button type="submit" class="btn btn-secondary btn-sm" style="margin-left: 6px;">
                                    Update
                                </button>
                            </form>
                        </div>
                    </div>
                    
                    <div class="cart-item-total">
                        $<%= (item.price * item.quantity).toFixed(2) %>
                    </div>
                    
                    <form action="/cart/delete/<%= item.productId %>" method="POST" style="margin: 0;">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Remove
                        </button>
                    </form>
                </div>
            <% }); %>
            
            <!-- Cart Summary -->
            <div class="cart-summary">
                <h3 style="margin-bottom: 20px;">Order Summary</h3>

                <!-- Voucher Section -->
                <div class="voucher-section" style="background: white; margin-bottom: 20px; padding: 15px;">
                    <h4 style="margin-bottom: 12px;"><i class="fas fa-ticket-alt"></i> Have a voucher?</h4>
                    <div class="voucher-input-group">
                        <input type="text" id="voucherCode" placeholder="Enter voucher code" maxlength="20">
                        <button type="button" class="btn" id="applyVoucherBtn" onclick="applyVoucher()">Apply</button>
                    </div>
                    <div id="voucherError" class="voucher-error" style="display: none;"></div>
                    <div id="voucherApplied" class="voucher-applied" style="display: none;">
                        <div class="voucher-info">
                            <i class="fas fa-check-circle" style="color: #28a745;"></i>
                            <span>Voucher applied:</span>
                            <span class="voucher-code" id="appliedVoucherCode"></span>
                        </div>
                        <button type="button" class="btn btn-sm" style="background: #dc3545;" onclick="removeVoucher()">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div style="margin-top: 10px;">
                        <a href="/vouchers" style="font-size: 13px; color: var(--primary);">
                            <i class="fas fa-ticket-alt"></i> View my vouchers
                        </a>
                    </div>
                </div>

                <div class="summary-row">
                    <span>Subtotal:</span>
                    <span id="subtotalDisplay">$<%= total.toFixed(2) %></span>
                </div>

                <div class="summary-row">
                    <span>Delivery Fee:</span>
                    <span id="deliveryDisplay"><%= total >= 60 ? 'FREE' : '$5.00' %></span>
                </div>

                <div class="summary-row discount-row" id="discountRow" style="display: none;">
                    <span><i class="fas fa-tag"></i> Voucher Discount:</span>
                    <span id="discountDisplay">-$0.00</span>
                </div>

                <% if (total < 60) { %>
                    <div class="summary-row" style="color: var(--dark-gray); font-size: 14px;">
                        <span><i class="fas fa-info-circle"></i> Add $<%= (60 - total).toFixed(2) %> more for free delivery</span>
                        <span></span>
                    </div>
                <% } %>

                <div class="summary-row summary-total">
                    <span>Total:</span>
                    <span id="totalDisplay">$<%= (total + (total >= 60 ? 0 : 5)).toFixed(2) %></span>
                </div>

                <div style="display: flex; gap: 15px; margin-top: 25px;">
                    <a href="/shopping" class="btn btn-secondary" style="flex: 1;">
                        <i class="fas fa-arrow-left"></i> Continue Shopping
                    </a>
                    <form action="/checkout" method="POST" style="flex: 1; margin: 0;" id="checkoutForm">
                        <input type="hidden" name="voucherCode" id="checkoutVoucherCode" value="">
                        <button type="submit" class="btn" style="width: 100%;height: 49.6px;">
                            <i class="fas fa-credit-card"></i> Proceed to Checkout
                        </button>
                    </form>
                </div>
            </div>
            
        <% } else { %>
            <!-- Empty Cart -->
            <div class="empty-cart">
                <i class="fas fa-shopping-cart"></i>
                <h2 style="color: var(--text-dark); margin-bottom: 15px;">Your cart is empty</h2>
                <p style="color: var(--dark-gray); margin-bottom: 30px; font-size: 18px;">
                    Looks like you haven't added anything to your cart yet
                </p>
                <a href="/shopping" class="btn" style="font-size: 18px; padding: 15px 40px;">
                    <i class="fas fa-shopping-basket"></i> Start Shopping
                </a>
            </div>
        <% } %>
    </div>
    
    <%- include('partials/footer', { user: user }) %>
    
    <script src="/js/main.js"></script>
    <script>
        // Voucher handling
        const subtotal = <%= typeof total !== 'undefined' ? total : 0 %>;
        const deliveryFee = subtotal >= 60 ? 0 : 5;
        let appliedVoucher = null;
        let discount = 0;

        async function applyVoucher() {
            const code = document.getElementById('voucherCode').value.trim().toUpperCase();
            const errorEl = document.getElementById('voucherError');
            const appliedEl = document.getElementById('voucherApplied');

            if (!code) {
                errorEl.textContent = 'Please enter a voucher code';
                errorEl.style.display = 'block';
                return;
            }

            try {
                const response = await fetch('/voucher/validate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ code: code, orderTotal: subtotal })
                });
                const data = await response.json();

                if (!data.ok) {
                    errorEl.textContent = data.error || 'Invalid voucher';
                    errorEl.style.display = 'block';
                    appliedEl.style.display = 'none';
                    return;
                }

                // Success
                appliedVoucher = data.voucher;
                discount = data.discount;

                errorEl.style.display = 'none';
                document.getElementById('appliedVoucherCode').textContent = data.voucher.code;
                appliedEl.style.display = 'flex';
                document.getElementById('voucherCode').disabled = true;
                document.getElementById('applyVoucherBtn').disabled = true;
                document.getElementById('checkoutVoucherCode').value = data.voucher.code;

                updateTotals();
            } catch (e) {
                errorEl.textContent = 'Error validating voucher';
                errorEl.style.display = 'block';
            }
        }

        function removeVoucher() {
            appliedVoucher = null;
            discount = 0;

            document.getElementById('voucherError').style.display = 'none';
            document.getElementById('voucherApplied').style.display = 'none';
            document.getElementById('voucherCode').disabled = false;
            document.getElementById('voucherCode').value = '';
            document.getElementById('applyVoucherBtn').disabled = false;
            document.getElementById('checkoutVoucherCode').value = '';

            updateTotals();
        }

        function updateTotals() {
            const discountRow = document.getElementById('discountRow');
            const discountDisplay = document.getElementById('discountDisplay');
            const totalDisplay = document.getElementById('totalDisplay');

            if (discount > 0) {
                discountRow.style.display = 'flex';
                discountDisplay.textContent = '-$' + discount.toFixed(2);
            } else {
                discountRow.style.display = 'none';
            }

            const finalTotal = subtotal + deliveryFee - discount;
            totalDisplay.textContent = '$' + Math.max(0, finalTotal).toFixed(2);
        }

        // Allow Enter key to apply voucher
        document.getElementById('voucherCode')?.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                applyVoucher();
            }
        });
    </script>
</body>
</html>
